pipeline {
    agent any
    stages{
        stage('Checkout'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/jenkins-docs/simple-java-maven-app.git']]])
            }
        }
        
        stage ('Build'){
            steps {
                sh 'mvn package'
            }
        }
        stage ('mail') {
            steps {
                mail bcc: '', body: 'hi,awesome', cc: '', from: '', replyTo: '', subject: 'hello build', to: 'diwakar.gahlot@gmail.com'
            }
        }
    }
}
